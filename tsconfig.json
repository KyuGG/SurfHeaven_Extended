{
	"compilerOptions": {
		"module": "esnext",
		"target": "es2017",
		"moduleResolution": "node",
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"strict": true,
		"sourceMap": true,
		"declaration": false,
		"jsx": "react",
		"outDir": "./dist",
		"rootDir": "./src"
	},
	"include": ["src/**/*.ts", "src/second.tsx"],
	"exclude": ["node_modules"]
}
